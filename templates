    <title>Search Missing Person</title>
    <link rel="stylesheet" href="static\searchmissingperson.css">
</head>
<body>
    <h1>Search Missing Person</h1>
    {% with messages = get_flashed_messages() %}
        {% if messages %}
            <ul class="flashes">
                {% for message in messages %}
                    <li>{{ message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endwith %}
    <form method="POST" enctype="multipart/form-data">
        <input type="file" name="image" accept="image/*" required>
        <button type="submit">Search</button>
    </form>
    <a href="{{ url_for('home') }}">Back to Home</a>
</body>
</html>



5.SEARCH_RESULTS.HTML

    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Result</title>
    <link rel="stylesheet" href="static/searchresults.css">
</head>
<body>
    <h1>Missing Person Found</h1>
    <div class="result-container">
        <div class="person-info">
            <h2>{{ person.name }}</h2>
            <p><strong>Age:</strong> {{ person.age }}</p>
            <p><strong>Gender:</strong> {{ person.gender }}</p>
            <p><strong>Description:</strong> {{ person.description }}</p>
            <p><strong>Guardian Email:</strong> {{ person.guardian_email }}</p>
        </div>
        <div class="image-container">
            <img src="{{ url_for('static', filename=person.image_path) }}" alt="{{ person.name }}">
            
        </div>
    </div>
    <p class="notification">An email notification has been sent to the guardian.</p>
    <a href="{{ url_for('home') }}" class="home-link">Back to Home</a>
</body>
</html>



6.UPDATE_MISSING.HTML

    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Missing Person</title>
    <link rel="stylesheet" href="static/updatemissing.css">
</head>
<body>
    <h1>Update Missing Person</h1>
    <form method="POST" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Name" required>
        <input type="number" name="age" placeholder="Age" required>
        <select name="gender" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <textarea name="description" placeholder="Description"></textarea>
        <input type="email" name="guardian_email" placeholder="Guardian Email" required>
        <input type="file" name="image" accept="image/*" required>
        <button type="submit">Submit</button>
    </form>
    <a href="{{ url_for('home') }}">Back to Home</a>
</body>
</html>
