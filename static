    color: var(--secondary-color);
    text-align: center;
    margin: 2rem 0;
    font-size: 2.5rem;
}

form {
    background-color: var(--input-background);
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 90%;
    max-width: 500px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

